<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Taller3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_light_blue</item>
        <item name="colorPrimaryVariant">@color/main_light_blue</item>
        <item name="colorOnPrimary">@color/main_light_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_light_blue</item>
        <item name="colorSecondaryVariant">@color/main_light_blue</item>
        <item name="colorOnSecondary">@color/main_light_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Taller3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Taller3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Taller3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>